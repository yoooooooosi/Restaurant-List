
<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-inner">
      <div class="row">
        <div class="col">
          <form action="/search" class="d-flex flex-sm-row justify-content-between align-items-center gap-2">
            <div class="input-group mb-2 mb-sm-0 mr-sm-2 w-25">    
              <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                  aria-describedby="button-addon2" value="{{keywords}}" />
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </form>
        </div>

      <div class="col-auto">
        <form action="/sort" class="mb-0">
            <select class="form-select" id="sort" name="sort" onchange="this.form.submit()" >
              <option value="" disabled selected>Select an option</option>
              <option value="A - Z">A - Z</option>
              <option value="Z - A">Z - A</option>
              <option value="類別">類別</option>
              <option value="地區">地區</option>
            </select>
        </form>
      </div>    
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
                
              </span>
              </div>

            <div class="d-flex align-items-md-baseline  justify-content-evenly flex-wrap ">
              <a href="/restaurants/{{this._id}}" class="btn btn-secondary  btn active " role="button" aria-pressed="true">詳細資訊</a>
              <a href="/restaurants/{{this._id}}/edit" class="btn btn-secondary btn active " role="button" aria-pressed="true">編輯</a>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('你確定要刪除嗎?')">
                <button type="submit" class="btn btn-secondary btn active">刪除</button>
              </form>
            </div>
          </div>


        {{/each}}

      </div>
    </div>
  </div>
</div>